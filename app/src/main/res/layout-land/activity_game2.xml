<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".game2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="1 - Player"
        android:id="@+id/xd"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:gravity="center"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xd"
        android:text="Player 1:"
        android:textSize="30dp"
        android:layout_margin="5dp"
        android:textColor="#EC4D37"
        android:id="@+id/ptd1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2:"
        android:textSize="30dp"
        android:layout_margin="5dp"
        android:textColor="#EC4D37"
        android:id="@+id/ptd2"
        android:layout_below="@id/ptd1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/xd"
        android:layout_height="wrap_content"
        android:text="Round:"
        android:textSize="30dp"
        android:layout_margin="10dp"
        android:textColor="#EC4D37"
        android:id="@+id/dround"
        android:layout_alignParentRight="true"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ptd2"
        android:orientation="horizontal"
        android:id="@+id/rd"
        >


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Stone"
            android:textColor="#EC4D37"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/gk1"/>

        <RadioButton
            android:id="@+id/gk2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="130dp"
            android:text="paper"
            android:textColor="#EC4D37"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/gk3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp"
            android:text="scissor"
            android:textColor="#EC4D37"
            android:textSize="30dp" />
    </RadioGroup>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rd"
        android:src="@drawable/st"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:id="@+id/dq"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/p"
        android:layout_below="@+id/rd"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="143dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/dq"
        android:id="@+id/dw"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sc"
        android:id="@+id/de"
        android:layout_marginLeft="173dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/dw"
        android:layout_below="@+id/rd"
        />

    <Button
        android:id="@+id/dbtr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dq"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="160dp"
        android:background="#1D1B1B"
        android:text="Reset"
        android:textColor="#EC4D37"
        android:textSize="20dp" />

    <Button
        android:id="@+id/dbts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/de"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="183dp"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@id/dbtr"
        android:background="#1D1B1B"
        android:text="Submit"
        android:textColor="#EC4D37"
        android:textSize="20dp" />


</RelativeLayout>
</ScrollView>
